{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "ctx-blocks/svg",
	"title": "Vector Graphic",
	"category": "widgets",
	"keywords": ["navigation", "logo", "menu", "claim"],
	"textdomain": "ctx-blocks",
	"description": "Instead of an image tag, this block includes a vector graphic directly into HTML. This allowes better scaling and styling.",
	"attributes": {
		"url": {
			"type": "string",
			"default": ""
		},
		"id": {
			"type": "number",
			"default": 0
		},
		"width": {
			"type": "number",
			"default": 500
		},
		"height": {
			"type": "number",
			"default": 500
		},
		"syncHeight": {
			"type": "boolean",
			"default": false
		},
		"sizeInPercent": {
			"type": "boolean",
			"default": false
		},
		"fillColor": {
			"type": "string",
			"default": ""
		},
		"strokeColor": {
			"type": "string",
			"default": ""
		},
		"customFillColor": {
			"type": "string",
			"default": ""
		},
		"customStrokeColor": {
			"type": "string",
			"default": ""
		},
		"strokeWidth": {
			"type": "number",
			"default": 0
		},
		"linkNewTab": {
			"type": "boolean",
			"default": false
		},
		"linkUrl": {
			"type": "string",
			"default": ""
		},
		"title": {
			"type": "string",
			"default": ""
		},
		"imageAlignment": {
			"type": "string",
			"default": "center"
		},
		"style": {
			"type": "object",
			"default": {}
		}
	},
	"supports": {
		"anchor": true,
		"align": ["wide", "full", "left", "center", "right"],
		"html": false,
		"spacing": {
			"padding": true,
			"margin": true
		}
	},
	"parent": ["core/group", "core/navigation"],
	"render": "file:./render.php"
}
