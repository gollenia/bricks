{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"name": "ctx-blocks/grid-row",
	"apiVersion": 2,
	"title": "Columns",
	"keywords": ["columns", "responsive"],
	"description": "Displays content in columns of different width",
	"textdomain": "ctx-blocks",
	"category": "layout",
	"attributes": {
		"gapSize": {
			"type": "integer",
			"default": 1
		},
		"equalizer": {
			"type": "boolean",
			"default": false
		},
		"divider": {
			"type": "boolean",
			"default": false
		},
		"childrenWidthSmall": {
			"type": "integer",
			"default": 1
		},
		"childrenWidthMedium": {
			"type": "integer",
			"default": 2
        },
        "childrenWidthLarge": {
			"type": "integer",
			"default": 3
        },
		"flowColumns": {
			"type": "boolean",
            "default": false
		}
        
	},
	"supports": {
		"align": ["full"],
		"default": "alignfull"
	}
}