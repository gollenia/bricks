{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"name": "ctx-blocks/grid-row",
	"apiVersion": 2,
	"title": "Columns",
	"keywords": [ "columns", "responsive" ],
	"description": "Displays content in columns of different width",
	"textdomain": "ctx-blocks",
	"category": "layout",
	"attributes": {
		"equalizer": {
			"type": "boolean",
			"default": false
		},
		"divider": {
			"type": "boolean",
			"default": false
		},
		"childrenWidthSmall": {
			"type": "integer",
			"default": 1
		},
		"childrenWidthMedium": {
			"type": "integer",
			"default": 2
		},
		"childrenWidthLarge": {
			"type": "integer",
			"default": 3
		}
	},
	"supports": {
		"align": [ "full" ],
		"default": "alignfull",
		"spacing": {
			"margin": true,
			"padding": true
		}
	}
}
