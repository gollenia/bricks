{
	"name": "ctx-blocks/cover",
	"apiVersion": 2,
	"title": "Cover",
	"keywords": [ "link", "action", "button" ],
	"textdomain": "ctx-blocks",
	"description": "Container block that adds a maximum width to it's content",
	"category": "layout",
	"attributes": {
		"url": {
			"type": "string"
		},
		"useFeaturedImage": {
			"type": "boolean",
			"default": false
		},
		"id": {
			"type": "number"
		},
		"alt": {
			"type": "string",
			"source": "attribute",
			"selector": "img",
			"attribute": "alt",
			"default": ""
		},
		"hasParallax": {
			"type": "boolean",
			"default": false
		},
		"originalImageSize": {
			"type": "boolean",
			"default": false
		},
		"overlayOpacity": {
			"type": "number",
			"default": 100
		},
		"overlayColor": {
			"type": "string"
		},
		"customOverlayColor": {
			"type": "string"
		},
		"backgroundType": {
			"type": "string",
			"default": "image"
		},
		"focalPoint": {
			"type": "object"
		},
		"minHeight": {
			"type": "number",
			"default": 400
		},
		"minHeightUnit": {
			"type": "string",
			"default": "px"
		},
		"gradient": {
			"type": "string"
		},
		"customGradient": {
			"type": "string"
		},
		"contentPosition": {
			"type": "string"
		},
		"isDark": {
			"type": "boolean",
			"default": true
		},
		"allowedBlocks": {
			"type": "array"
		},
		"templateLock": {
			"type": [ "string", "boolean" ],
			"enum": [ "all", "insert", "contentOnly", false ]
		},
		"tagName": {
			"type": "string",
			"default": "div"
		}
	},
	"usesContext": [ "postId", "postType" ],
	"supports": {
		"align": [ "full", "wide" ],
		"default": "full",
		"spacing": {
			"margin": true,
			"padding": true,
			"blockGap": true,
			"__experimentalDefaultControls": {
				"padding": true,
				"blockGap": true
			}
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": false,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"style": true,
				"width": true
			}
		},
		"__experimentalLayout": {
			"allowSizingOnChildren": true
		}
	},
	"editorStyle": "ctx-blocks-editor-cover",
	"style": "ctx-blocks-cover"
}
