{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"name": "ctx-blocks/image",
	"apiVersion": 2,
	"title": "Image",
	"keywords": ["list", "table"],
	"description": "List containing items with an image or icon and a text",
	"textdomain": "ctx-blocks",
	"category": "common",
	"attributes": {
		"hasLightbox": {
			"type": "boolean",
			"default": false
        },
		"url": {
			"type": "string",
            "default": ""
		},
        "lightboxText": {
            "type": "string",
            "default": ""
        },
		"image": {
			"type": "object",
			"default": null
        },
        "width": {
            "type": "integer",
            "default": 100
        },
        "alignment": {
            "type": "string",
            "default": "left"
        },
        "round": {
            "type": "boolean",
			"default": false
        },
        "roundCorners": {
            "type": "boolean",
            "default": true
        },
        "border": {
            "type": "boolean",
			"default": false
        },
        "shadow": {
            "type": "boolean",
			"default": false
        },
        "flip": {
            "type": "boolean",
            "default": false
        },
        "caption": {
            "type": "string",
			"default": ""
        }
	}
}