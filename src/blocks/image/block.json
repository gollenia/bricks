{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"name": "ctx-blocks/image",
	"apiVersion": 2,
	"title": "Image",
	"keywords": ["list", "table"],
	"description": "List containing items with an image or icon and a text",
	"textdomain": "ctx-blocks",
	"category": "common",
	"attributes": {
		"hasLightbox": {
			"type": "boolean",
			"default": false
		},
		"url": {
			"type": "string",
			"default": ""
		},
		"imageUrl": {
			"type": "string",
			"default": null
		},
		"imageId": {
			"type": "integer",
			"default": 0
		},
		"imageSize": {
			"type": "string",
			"default": "full"
		},
		"width": {
			"type": "integer",
			"default": 100
		},

		"round": {
			"type": "boolean",
			"default": false
		},
		"shadow": {
			"type": "boolean",
			"default": false
		},
		"flipX": {
			"type": "boolean",
			"default": false
		},
		"flipY": {
			"type": "boolean",
			"default": false
		},
		"rotate": {
			"type": "integer",
			"default": 0
		},
		"caption": {
			"type": "string",
			"default": ""
		},
		"aspectRatio": {
			"type": "string",
			"default": ""
		},
		"focalPoint": {
			"type": "object",
			"default": {
				"x": 0.5,
				"y": 0.5
			}
		}
	},
	"supports": {
		"align": ["left", "center", "right"],
		"anchor": true,
		"html": false,
		"multiple": true,
		"reusable": true,
		"alignWide": true,
		"customClassName": true,
		"spacing": {
			"margin": true,
			"__experimentalDefaultControls": {
				"margin": true
			}
		},
		"__experimentalBorder": {
			"__experimentalSkipSerialization": true,
			"color": true,
			"radius": true,
			"style": true,
			"width": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"style": true,
				"width": true
			}
		}
	},
	"__experimentalSelector": {
		"border": ".wp-block-ctx-blocks-image img"
	}
}
