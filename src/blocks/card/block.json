{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"name": "ctx-blocks/card",
	"apiVersion": 3,
	"title": "Card",
	"keywords": ["container", "card"],
	"description": "Card component to hold different Information",
	"textdomain": "ctx-blocks",
	"category": "layout",
	"attributes": {
		"secondaryColor": {
			"type": "string",
			"default": ""
		},
		"customSecondaryColor": {
			"type": "string",
			"default": ""
		},
		"backgroundColor": {
			"type": "string",
			"default": ""
		},
		"customBackgroundColor": {
			"type": "string",
			"default": ""
		},
		"shadow": {
			"type": "boolean",
			"default": true
		},
		"focalPoint": {
			"type": "object"
		},
		"url": {
			"type": "string",
			"default": ""
		},
		"hover": {
			"type": "boolean",
			"default": false
		},
		"textAlign": {
			"type": "string",
			"default": "left"
		},
		"imageUrl": {
			"type": "string",
			"default": ""
		},
		"imageAlt": {
			"type": "string",
			"default": ""
		},
		"imageId": {
			"type": "number",
			"default": 0
		},
		"labelText": {
			"type": "string",
			"default": ""
		},
		"badgeText": {
			"type": "string",
			"default": ""
		}
	},
	"usesContext": ["postId", "postType"],
	"supports": {
		"anchor": true,
		"html": false,
		"shadow": true,
		"className": true,

		"layout": {
			"allowSizingOnChildren": false,
			"allowVerticalAlignment": true,
			"allowSwitching": false,
			"default": {
				"type": "flex",
				"orientation": "vertical",
				"justifyContent": "stretch"
			}
		},
		"spacing": {
			"blockGap": true,
			"padding": true,
			"__experimentalDefaultControls": {
				"padding": true,
				"blockGap": true
			}
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"style": true,
				"width": true
			}
		}
	},
	"selectors": {
		"root": ".wp-block-ctx-blocks-card",
		"spacing": ".wp-block ctx-card .ctx-card-content"
	},
	"editorStyle": "ctx-cards-editor-style",
	"style": "ctx-blocks-style"
}
