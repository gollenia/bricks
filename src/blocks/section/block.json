{
	"name": "ctx-blocks/section",
	"apiVersion": 2,
	"title": "Section",
	"keywords": [ "link", "action", "button" ],
	"textdomain": "ctx-blocks",
	"description": "Root-level block to keep everything in place",
	"category": "layout",
	"attributes": {
		"backgroundColor": {
			"type": "string",
			"default": "default"
		},
		"backgroundIsDark": {
            "type":"boolean",
            "default": false
        },
		"backgroundImage": {
			"type": "object",
			"default": null
		},
		"imagePosition": {
			"type": "string",
			"default": "center"
		},
		"parallaxEffect": {
			"type": "boolean",
			"default": false
		},
		"textAlignment": {
			"type": "string",
			"default": "left"
		},
		"paddingTop": {
			"type": "integer",
			"default": 10
		},
		"paddingBottom": {
			"type": "integer",
			"default": 10
		}
	},
	"supports": {
		"align": ["full"],
		"default": "alignfull"
	}
}