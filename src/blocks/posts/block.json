{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"name": "ctx-blocks/posts",
	"apiVersion": 2,
	"title": "Posts",
	"keywords": [ "list", "table" ],
	"description": "Collection of posts, listed as cards or item List",
	"textdomain": "ctx-blocks",
	"category": "widgets",
	"attributes": {
		"columnsSmall": {
			"type": "number",
			"default": 1
		},
		"columnsMedium": {
			"type": "number",
			"default": 2
		},
		"columnsLarge": {
			"type": "number",
			"default": 3
		},
		"showImages": {
			"type": "boolean",
			"default": true
		},
		"roundImages": {
			"type": "boolean",
			"default": false
		},
		"dropShadow": {
			"type": "boolean",
			"default": true
		},
		"hover": {
			"type": "boolean",
			"default": true
		},
		"imageSize": {
			"type": "number",
			"default": 100
		},
		"showDate": {
			"type": "boolean",
			"default": true
		},
		"showCategory": {
			"type": "boolean",
			"default": true
		},
		"showTag": {
			"type": "boolean",
			"default": true
		},
		"styleType": {
			"type": "string",
			"default": "list"
		},
		"limit": {
			"type": "number",
			"default": 6
		},
		"order": {
			"type": "string",
			"default": "desc"
		},
		"orderBy": {
			"type": "string",
			"default": "date"
		},
		"category": {
			"type": "string",
			"default": ""
		},
		"excerptLength": {
			"type": "number",
			"default": 20
		},
		"textAlignment": {
			"type": "string",
			"default": "left"
		}
	},
	"supports": {
		"align": [ "full", "wide" ],
		"default": "full",
		"spacing": {
			"margin": true,
			"padding": true
		}
	}
}
