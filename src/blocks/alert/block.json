{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "ctx-blocks/alert",
	"title": "Alert",
	"category": "formatting",
	"keywords": [ "message", "alert", "warning", "info", "error" ],
	"textdomain": "ctx-blocks",
	"description": "Show an information or warning to the user",
	"attributes": {
		"alertColor": {
			"type": "string",
			"default": "default"
		},
		"alertText": {
			"type": "string",
			"default": ""
		},
		"title": {
			"type": "string",
			"default": ""
		},
		"isDismissable": {
			"type": "boolean",
			"default": false
		}
	},
	"editorStyle": "wp-block-alert-editor"
}