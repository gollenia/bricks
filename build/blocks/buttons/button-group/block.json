{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "ctx-blocks/button-group",
  "title": "Button Group",
  "keywords": [
    "link",
    "action",
    "button"
  ],
  "textdomain": "ctx-blocks",
  "description": "Collection of buttons that can be aligned or spaced.",
  "category": "layout",
  "attributes": {
    "textAlignment": {
      "type": "string",
      "default": "left"
    },
    "paddingTop": {
      "type": "integer",
      "default": 10
    },
    "paddingBottom": {
      "type": "integer",
      "default": 10
    }
  },
  "supports": {
    "align": [
      "full"
    ],
    "default": "alignfull",
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "usesContext": [
    "postType"
  ]
}