{% set bg = get_color_by_slug(backgroundColor, style.color.background) %}

<div class="header__titlebox">

<div class="header__title" style="
	{% if bg %}background-color: {{ bg.color }}bb {% endif %}
	{% if style.color.gradient %}background: {{ style.color.gradient }}{% endif %}
">{% if isLink %}
<a href={{ url }} target={{linkTarget}} class="button button--secondary header__link {{ linkIconOrientation == "right" ? "header__link--icon-right" }}" >
	{{ linkTitle }} 
	{{ linkIcon ? "<i class='material-icons'>" ~ linkIcon ~ "</i>" }}
</a>
{% endif %}
	<h{{level}}>{{function('get_the_title')}}</h{{level}}>
</div>
</div>
